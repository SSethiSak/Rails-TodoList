<h1 style="text-align: center;">Task Detail</h1>
<table>
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Category</th>
      <th>Status</th>
      <th>Completed</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @task.name %></td>
      <td><%= @task.category.name %></td>
      <td><%= @task.status ? @task.status.humanize : "Not set" %></td>
      <td><%= @task.is_completed? ? 'Yes' : 'No' %></td>
      <td style="display: flex;">
        <%= link_to 'Edit', edit_task_path(@task),  style: "background-color: #FFA500; color: white; padding: 10px 20px; margin:20px 10px; text-decoration: none; border-radius: 5px;" %>

        <%= button_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, style: "background-color: red; color: white; padding: 10px 20px;margin:20px 10px; text-decoration: none; border-radius: 5px;" %>
        
        <%= link_to 'Back to Tasks', tasks_path, style: "background-color: #0080FF; color: white; padding: 10px 20px;margin:20px 10px; text-decoration: none; border-radius: 5px;" %>
        
      </td>
    </tr>
  </tbody>
</table>